{
  "name": "dbs-filecoin",
  "version": "1.0.0",
  "main": "index.js",
  "author": "xlassix and ravish1729",
  "license": "Apache-2.0",
  "scripts": {
    "build": "babel src --out-dir dist",
    "test": "cross-env NODE_ENV=testing jest --forceExit --detectOpenHandles  --silent=false",
    "coverage": "cross-env NODE_ENV=testing jest --forceExit --detectOpenHandles  --silent --coverage",
    "dev": "nodemon   --exec yarn restart",
    "restart": "rimraf dist && yarn build && yarn start",
    "start": "node dist/index.js",
    "lint": "eslint --fix ./src/api/**/*.js",
    "format": "prettier --write './**/*.{js,ts,md}' --config ./.prettierrc"
  },
  "engines": {
    "node": "^16.0.0 || ^18.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^5.6.9",
    "express": "^4.18.2",
    "joi": "^17.4.2",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "node-cron": "^3.0.2",
    "sequelize": "^6.29.0",
    "sqlite3": "^5.1.4",
    "uuid": "^9.0.0",
    "validator": "^13.7.0",
    "web3-utils": "^1.8.2"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "collectCoverageFrom": [
      "src/api/**/*.js"
    ],
    "restoreMocks": true
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/runtime": "^7.20.13",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.3.1",
    "mock-req-res": "^1.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6"
  }
}
